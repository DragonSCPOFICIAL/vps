{
  "name": "GitHub Codespace - 4 CPUs e 16GB RAM",
  "image": "ubuntu:20.04",
  "build": {
    "args": {
      "VARIANT": "3",
      "INSTALL_NODE": "false"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "docker.docker-extension"
      ]
    }
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.shellArgs.linux": ["-l"]
  },
  "remoteUser": "vscode",
  "postCreateCommand": "echo 'VPS configurado! IP local: $(hostname -I)'"
}
